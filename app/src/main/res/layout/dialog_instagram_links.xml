<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instagram_dialog_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBryanInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bryan_armando_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/instagram_button_color"
        app:cornerRadius="12dp"
        android:paddingVertical="12dp"
        android:layout_marginBottom="12dp"
        app:icon="@drawable/ic_instagram"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLizbethInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lizbeth_rodriguez_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/instagram_button_color"
        app:cornerRadius="12dp"
        android:paddingVertical="12dp"
        app:icon="@drawable/ic_instagram"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="8dp"/>

</LinearLayout>
